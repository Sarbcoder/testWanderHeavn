<% layout("/layouts/boilerplate") %>

<div class="container mt-5">
    <h2>Delete Listing</h2>
    <p>Are you sure you want to delete this listing?</p>
    <br>
    <div class="card">
        <img src="<%= listing.images[0].url %>" height="300px" width="300px" class="card-img-top" alt="Listing Image">
        <div class="card-body">
            <h5 class="card-title"><%= listing.title %></h5>
            <p class="card-text"><%= listing.description %></p>
            <p class="text-danger">This action is irreversible!</p>
        </div>
    </div>
    <br>
    <form action="/admin/listings/<%= listing._id %>?_method=DELETE" method="POST">
        <button type="submit" class="btn btn-danger mt-3">Yes, Delete</button>
        <a href="/admin/manage-listings" class="btn btn-secondary mt-3">Cancel</a>
    </form>
</div>
